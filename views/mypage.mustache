<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="th" lang="th">

<head>
  <title>My Page</title>
  <script src="/bower_components/angular/angular.js"></script>
  <script type="text/javascript" src="js/app.js"></script>
  <link rel="stylesheet" href="/bower_components/bulma/css/bulma.css">
  <link rel="stylesheet" href="css/style.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">


</head>

<body>

  <div class="container" ng-app='myApp'>
    <section class="hero is-warning">
      <div class="hero-body">
        <div class="container">
          <h1 class="title has-text-centered">
            POST IT
          </h1>
          <h2 class="subtitle has-text-centered">
            Don't forget your memories.
          </h2>
        </div>
      </div>
    </section>
    <br>
    <div class="notification">
      <nav class="level nav-border-g">
        <div class="level-item has-text-centered">
          <div>
            <p class="title">
              <div class="img-cruve">
                <p class="image is-64x64">
                  <img src="https://instagram.fbkk5-2.fna.fbcdn.net/t51.2885-19/s150x150/15624103_231223717301469_691266417831444480_a.jpg">
                </p>
              </div>
            </p>
          </div>
        </div>
        <div class="level-item has-text-centered ">
          <div>
            <p class="heading">Post it counter</p>
            <p class="title">{{count}}</p>
          </div>
        </div>
        <div class="level-item has-text-centered ">
          <div>
            <p class="heading">Like</p>
            <p class="title">0</p>
          </div>
        </div>
        
      </nav>
      {{text.actName}}
      <div class="nav-border-g" ng-controller="Ctrl">
        <form name="actForm" ng-submit="submit(model)" novalidate>
          <label class="label">Activity</label>
          <div>
            <p class="control">
              <input ng-class="{'is-danger' : actForm.actName.$invalid && !actForm.actName.$pristine}" ng-model="model.actName" name="actName"
                class="input is-hovered" type="text" placeholder="Activity name ..." required>
            </p>
          </div>
          <label class="label">Content</label>
          <p class="control">
            <textarea ng-class="{'is-danger' : actForm.actContent.$invalid && !actForm.actContent.$pristine}" ng-model="model.actContent"
              name="actContent" class="textarea is-hovered" placeholder="Content ..." required></textarea>
          </p>
          <div class="control is-grouped">
            <p class="control ">
              <button class="button is-primary" ng-class="{'is-disabled':actForm.$invalid}">POST IT</button>
            </p>

          </div>
        </form>
      </div>
      <br>
      <div class="columns is-multiline is-mobile">
        {{#items}}
        <div class="column is-one-third">
          <!-- <p class="notification is-info has-text-centered">{{actName}}</p>-->
          {{{actColor}}}{{actName}}</p>
          <div class="card">

            <div class="card-content">
              <div class="media">
                <div class="media-left">
                  <figure class="image" style="height: 40px; width: 40px;">
                    <img src="https://instagram.fbkk5-2.fna.fbcdn.net/t51.2885-19/s150x150/15624103_231223717301469_691266417831444480_a.jpg" alt="Image">
                  </figure>
                </div>
                <div class="media-content">
                  <p class="title is-4">Piyapat Plydaung</p>
                  <p class="subtitle is-6">@piayaptiii</p>
                </div>
              </div>
              <div class="content">
                {{actContent}}
                <br>
                <small>{{actTime}} - {{actDate}}</small>
              </div>
            </div>
            <footer class="card-footer">
              <a class="card-footer-item"><span class="icon is-small"><i class="fa fa-reply"></i></span></a>
              <a class="card-footer-item"><span class="icon is-small"><i class="fa fa-retweet"></i></span></a>
              <a class="card-footer-item"><span class="icon is-small"><i class="fa fa-heart"></i></span></a>
            </footer>
          </div>
        </div>
        {{/items}}
      </div>
    </div>
    <footer class="footer">
      <div class="container">
        <div class="content has-text-centered">
          <p>
            <strong>Web Application</strong> by <a href="https://www.facebook.com/piyapat.plydaungiii">Piyapat Plydaung</a>
          </p>
          <p>
            <a class="icon" href="https://github.com/loosamza">
              <i class="fa fa-github"></i>
            </a>
          </p>
        </div>
      </div>
    </footer>
  </div>




</body>

</html>